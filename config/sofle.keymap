#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

/ {
    // Activate ADJUST layer by pressing raise and lower

    conditional_layers {
        compatible = "zmk,conditional-layers";

        adjust_layer {
            if-layers = <LOWER RAISE>;
            then-layer = <ADJUST>;
        };
    };

    macros {
        ECT: CT {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp E &kp C>;
            label = "CT";
        };

        minusx: minusx {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT &kp MINUS &kp ENTER>;
            label = "MINUSX";
        };
    };

    combos {
        compatible = "zmk,combos";

        kuning {
            bindings = <&kuning>;
            key-positions = <35 34>;
        };

        hijau {
            bindings = <&hijau>;
            key-positions = <22 23>;
        };

        biru {
            bindings = <&biru>;
            key-positions = <10 11>;
        };

        cyan {
            bindings = <&cyan>;
            key-positions = <48 47>;
        };

        ungu {
            bindings = <&ungu>;
            key-positions = <34 33>;
        };

        tosca {
            bindings = <&tosca>;
            key-positions = <22 21>;
        };

        orange {
            bindings = <&orange>;
            key-positions = <10 9>;
        };

        abu {
            bindings = <&abu>;
            key-positions = <58 59>;
        };

        putih {
            bindings = <&putih>;
            key-positions = <47 46>;
        };

        hitam {
            bindings = <&hitam>;
            key-positions = <33 32>;
        };

        gold {
            bindings = <&gold>;
            key-positions = <21 20>;
        };

        pink {
            bindings = <&pink>;
            key-positions = <8 9>;
        };

        PINKUNGU {
            bindings = <&PINKUNGU>;
            key-positions = <23 11>;
        };

        CYANUNGU {
            bindings = <&CYANUNGU>;
            key-positions = <22 10>;
        };

        MERAHBIRU {
            bindings = <&MERAHBIRU>;
            key-positions = <21 9>;
        };

        MERAHKUNNG {
            bindings = <&MERAHKUNING>;
            key-positions = <20 8>;
        };

        BIRUCYAN {
            bindings = <&BIRUCYAN>;
            key-positions = <19 7>;
        };

        HIJAUBIRU {
            bindings = <&HIJAUBIRU>;
            key-positions = <18 6>;
        };

        HIJAUKUNING {
            bindings = <&HIJAUKUNING>;
            key-positions = <35 23>;
        };

        ORANGEBIRU {
            bindings = <&ORANGEBIRU>;
            key-positions = <34 22>;
        };

        CYANKUNING {
            bindings = <&CYANKUNING>;
            key-positions = <33 21>;
        };

        PINKKUNING {
            bindings = <&PINKKUNING>;
            key-positions = <32 20>;
        };

        merah {
            bindings = <&merah>;
            key-positions = <48 49>;
        };

        bluetooth {
            bindings = <&out OUT_BLE>;
            key-positions = <0 11>;
        };

        usb {
            bindings = <&out OUT_USB>;
            key-positions = <12 23>;
        };

        usbbluetooth {
            bindings = <&out OUT_TOG>;
            key-positions = <55 54>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "default";

            // ------------------------------------------------------------------------------------------------------------
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |       |
            // |  ESC  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BKSPC |
            // |  TAB  |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //               | GUI | ALT  | CTRL | LOWER|  ENTER |  | SPACE | RAISE| CTRL  | ALT   | GUI  |

            bindings = <
&kp CAPSLOCK    &kp N1  &kp N2    &kp N3    &kp N4          &kp N5                           &kp N6    &kp N7   &kp N8          &kp N9           &kp N0    &kp BACKSPACE
&kp TAB         &kp Q   &kp W     &kp E     &kp R           &kp T                            &kp Y     &kp U    &kp I           &kp O            &kp P     &kp DELETE
&kp LEFT_SHIFT  &kp A   &kp S     &kp D     &kp F           &kp G                            &kp H     &kp J    &kp K           &kp L            &kp F2    &kp ENTER
&kp LCTRL       &kp Z   &kp X     &kp C     &kp V           &kp B   &kp C_MUTE    &kp F5     &kp N     &kp M    &kp COMMA       &kp DOT          &kp FSLH  &kp F12
                        &kp LGUI  &kp LALT  &studio_unlock  &ECT    &kp SPACE     &kp SPACE  &kp PLUS  &minusx  &kp LEFT_ARROW  &kp RIGHT_ARROW
            >;

            sensor-bindings =
                <&inc_dec_kp C_VOL_UP C_VOL_DN>,
                <&inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
            display-name = "lower";

            // TODO: Some binds are waiting for shifted keycode support.
            // ------------------------------------------------------------------------------------------------------------
            // |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |  F12  |
            // |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
            // |       |  =  |  -  |  +   |  {   |  }   |        |  |       |  [   |  ]    |  ;    |  :   |   \   |       |
            //               |     |      |      |      |        |  |       |      |       |       |      |

            bindings = <
&trans          &kp F1     &kp F2     &kp F3       &kp F4    &kp F5                       &kp F6     &kp F7    &kp F8           &kp F9     &kp F10   &kp F11
&kp GRAVE       &kp N1     &kp N2     &kp N3       &kp N4    &kp N5                       &kp N6     &kp N7    &kp N8           &kp N9     &kp N0    &kp F12
&studio_unlock  &kp EXCL   &kp AT     &kp HASH     &kp DLLR  &kp PRCNT                    &kp CARET  &kp AMPS  &kp KP_MULTIPLY  &kp LPAR   &kp RPAR  &kp PIPE
&trans          &kp EQUAL  &kp MINUS  &kp KP_PLUS  &kp LBRC  &kp RBRC   &trans    &trans  &kp LBKT   &kp RBKT  &kp SEMI         &kp COLON  &kp BSLH  &trans
                           &trans     &trans       &trans    &trans     &trans    &trans  &trans     &trans    &trans           &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        raise_layer {
            display-name = "raise";

            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
            // |       | INS  | PSCR | GUI   |       |      |                | PGUP |      |   ^   |      |       |       |
            // |       | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |   <- |   v   |  ->  |  DEL  | BKSPC |
            // |       | UNDO | CUT  | COPY  | PASTE |      |      |  |      |      |      |       |      |       |       |
            //                |      |       |       |      |      |  |      |      |      |       |      |

            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &trans     &trans    &trans    &trans     &trans   &trans
&trans      &kp INS       &kp PSCRN     &kp K_CMENU   &trans        &trans                          &kp PG_UP  &trans    &kp UP    &trans     &kp N0   &trans
&trans      &kp LALT      &kp LCTRL     &kp LSHFT     &trans        &kp CLCK                        &kp PG_DN  &kp LEFT  &kp DOWN  &kp RIGHT  &kp DEL  &kp BSPC
&trans      &kp K_UNDO    &kp K_CUT     &kp K_COPY    &kp K_PASTE   &trans        &trans    &trans  &trans     &trans    &trans    &trans     &trans   &trans
                          &trans        &trans        &trans        &trans        &trans    &trans  &trans     &trans    &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        adjust_layer {
            // ----------------------------------------------------------------------------------------------------------------------------
            // | BTCLR  |  BT1    |  BT2    |   BT3   |   BT4   |   BT5   |                  |      |      |       |      |       |       |
            // | EXTPWR | RGB_HUD | RGB_HUI | RGB_SAD | RGB_SAI | RGB_EFF |                  |      |      |       |      |       |       |
            // |        | RGB_BRD | RGB_BRI |         |         |         |                  |      |      |       |      |       |       |
            // |        |         |         |         |         |         | RGB_TOG | |      |      |      |       |      |       |       |
            //                    |         |         |         |         |         | |      |      |      |       |      |

            display-name = "adjust";
            bindings = <
&bt BT_CLR         &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2     &bt BT_SEL 3     &bt BT_SEL 4                               &none  &none  &none  &none  &none  &none
&ext_power EP_TOG  &rgb_ug RGB_HUD  &rgb_ug RGB_HUI  &rgb_ug RGB_SAD  &rgb_ug RGB_SAI  &rgb_ug RGB_EFF                            &none  &none  &none  &none  &none  &none
&none              &rgb_ug RGB_BRD  &rgb_ug RGB_BRI  &none            &none            &none                                      &none  &none  &none  &none  &none  &none
&none              &none            &none            &none            &none            &none            &rgb_ug RGB_TOG    &none  &none  &none  &none  &none  &none  &none
                                    &none            &none            &none            &none            &none              &none  &none  &none  &none  &none
            >;
        };
    };
};
